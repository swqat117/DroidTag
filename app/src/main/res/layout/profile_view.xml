<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    CircleProgressView:cardBackgroundColor="@android:color/transparent"
    CircleProgressView:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.quascenta.petersroad.droidtag.widgets.StatusWidget
            android:id="@+id/dashboard_all"
            android:layout_width="0dp"
            android:layout_height="80dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1">

        </com.quascenta.petersroad.droidtag.widgets.StatusWidget>

        <com.quascenta.petersroad.droidtag.widgets.StatusWidget
            android:id="@+id/dashboard_completed"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1">

        </com.quascenta.petersroad.droidtag.widgets.StatusWidget>

        <com.quascenta.petersroad.droidtag.widgets.StatusWidget
            android:id="@+id/dashboard_alerted"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1">

        </com.quascenta.petersroad.droidtag.widgets.StatusWidget>

        <com.quascenta.petersroad.droidtag.widgets.StatusWidget
            android:id="@+id/dashboard_pending"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1">

        </com.quascenta.petersroad.droidtag.widgets.StatusWidget>


    </LinearLayout>
</android.support.v7.widget.CardView>
