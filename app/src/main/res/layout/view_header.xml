<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/devices_list_view_header"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/tv_device_header_Temp_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp" />

    <ImageView
        android:id="@+id/tv_device_header_Rh_sensor"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_toStartOf="@+id/tv_device_header_Temp_sensor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_device_header_timestamp" />

    <ImageView
        android:id="@+id/tv_device_header_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="21dp"
        android:src="@drawable/ic_timer_black_24dp" />
</RelativeLayout>